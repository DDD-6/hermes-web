{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["@emotion/react"],
    "outDir": "dist/",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "styles/*": ["src/styles/*"],
      "utils/*": ["src/utils/*"],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./*.config.js",
  ],
  "exclude": [
    "node_modules"
  ]
}